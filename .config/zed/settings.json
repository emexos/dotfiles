// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git_panel": {
    "button": true
  },
  "outline_panel": {
    "git_status": true
  },
  "project_panel": {
    "git_status": true
  },
  "tabs": {
    "git_status": false
  },
  "file_finder": {
    "git_status": true
  },
  "auto_update_extensions": {
    "assembly": false,
    "html": false,
    "nvim-nightfox": false
  },
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "vim_mode": false,
  "base_keymap": "VSCode",
  "ui_font_family": "Departure Mono",
  "buffer_font_family": "Departure Mono",
  //"ui_font_family": "GohuFont",
  //"buffer_font_family": "GohuFont",
  //"ui_font_family": "Geneva",
  //"buffer_font_family": "Hack Nerd Font Mono",
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    //"dark": "Base16 Gruvbox dark, medium"
    //"dark": "Base16 Everforest"
    //"dark": "Base16 Eighties"
    //"dark": "Snazzy Theme - blurred"
    //"dark": "Snazzy Theme"
    //"dark": "One Dark"
    "dark": "Base16 Espresso"
  },
  "workbench.status_bar.visible": false,
  "workbench.activity_bar.visible": false,
  "workbench.title_bar.visible": false,
  "editor.minimap.enabled": false,
  "features": {
    "edit_prediction_provider": "none"
  }
}
